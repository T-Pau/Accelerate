arguments --create-library --target 6502 a.s
file a.s <inline>
.macro inc16 address {
    inc address
    bne :+
    inc address + 1
:
}
.section code
test {
    inc16 $1234
    rts
}
test2 {
    beq :+
    inc16 $1234
    rts
:
    inc $12
    rts
}
end-of-inline-data
file a.lib {} <inline>
.format_version 1.0
.target "6502"
.macro inc16 {
    visibility: private
    arguments: address
    body <
        .if .in_range($00, $ff, address) {
          .data $e6, address:1
        }
        .else {
          .data $ee, address:2
        }
      .label_1:
        .data $d0, (((.current_object+.label_offset(:+))-(.current_object+.label_offset(.current_object, .label_1)))-$02):-1
        .if .in_range($00, $ff, (address+$01)) {
          .data $e6, (address+$01):1
        }
        .else {
          .data $ee, (address+$01):2
        }
      :
    >
}
.object test {
    visibility: private
    section: code
    body <
        .scope {
          .data $ee, $1234, $d0, $03:-1, $ee, $1235
        }
        .data $60
    >
}
.object test2 {
    visibility: private
    section: code
    body <
        .data $f0, $09:-1
        .scope {
          .data $ee, $1234, $d0, $03:-1, $ee, $1235
        }
        .data $60, $e6, $12, $60
    >
}
end-of-inline-data
